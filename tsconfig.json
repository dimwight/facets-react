{
  "include": [
    "src/**/*",
    "fts**/*"
  ],
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnreachableCode": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "esnext",
    "jsx": "react"
  }
}